---
title: Home
layout: "base"
---

<section id="hero" class="hero-section">
    <div class="hero-items">
        <div class="hero-image">
            <img src="assets/art/hero_art.webp" alt="hero art">
        </div>
        <div class="hero-blurb">
            <h1>JAKE STYLES</h1>
            <h4>FRONT END - GRAPHIC DESIGN - GAME DEVELOPMENT</h4>
            <a href="#about">
                <button class="default-button">LEARN MORE</button>
            </a>
        </div>
    </div>
</section>

<section id="about" class="about-section">
    <div class="about-items">
        <div class="about-blurb">
            <h2>ABOUT ME</h2>
            <p>Recent Computer Science grad from UVic with experience in web development, Python, and teaching technology to youth. Passionate about building responsive web applications and graphic design.<p>
        </div>
        <div class="about-who-i-am">
            <h4>EDUCATION</h4>
            <div class="job">
                <p class="title">University Of Victoria</p>
                <p class="date">2019 - 2025</p>
                <p class="name">Bachelor's of Computer Science</p>
            </div>
        </div>
        <div class="about-work-experience">
            <h4>WORK EXPERIENCE</h4>
            <div class="job">
                <p class="title">Emergency Managment BC</p>
                <p class="date">September 2022 - December 2022</p>
                <p class="name">Business Continuity Advisor</p>
            </div>
            <div class="job">
                <p class="title">Byte Camp Computer Training School</p>
                <p class="date">June 2024 - September 2025</p>
                <p class="name">Lead Instructor</p>
            </div>
        </div>
        <div class="about-skills">
            <h4>MY TECH SKILLS</h4>
            <div data-name="HTML" data-percent="95%" class="progress-bar">
                <div class="front-bar" style="--percent: 95%;"></div>
                <div class="back-bar"></div>
            </div>
            <div data-name="CSS" data-percent="90%" class="progress-bar">
                <div class="front-bar" style="--percent: 90%;"></div>
                <div class="back-bar"></div>
            </div>
            <div data-name="PYTHON" data-percent="80%" class="progress-bar">
                <div class="front-bar" style="--percent: 80%;"></div>
                <div class="back-bar"></div>
            </div>
            <div data-name="GD SCRIPT" data-percent="100%" class="progress-bar">
                <div class="front-bar" style="--percent: 95%;"></div>
                <div class="back-bar"></div>
            </div>
        </div>
    </div>
</section>

<section id="projects" class="projects-section">
    <h2>MY PROJECTS</h2>
    <div class="project-items">
        {% for project in collections.project %}
            {% if project.data.stack %}
            <div data-status="{{ project.data.status }}" class="project-item">
                <a href="{{ project.data.link }}" target="_blank"><img src="{{ project.data.image}}" alt="{{ project.data.title }}"></a>
                <h4>{{ project.data.title }}</h4>
                <p>{{ project.data.description }}</p>
                <div class="project-item-stack">
                    {% for tech in project.data.stack %}
                    <div class="stack-item">
                        {{ tech }}
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        {% endfor %}
    </div>
</section>

<section id="contact" class="contact section">
    <form action="">
        <h4>CONTACT ME</h4>
        <input type="text" name="first" placeholder="First Name">
          <input type="text" name="last" placeholder="Last Name">
          <input type="email" name="email" placeholder="Email">
        <textarea name="your message" id="" placeholder="message"></textarea>
        <button type="submit" class="default-button">SEND</button>
    </form>
</section>
